<h1>Productos</h1>
<%= link_to "Nuevo Producto",new_product_url %>
<table>
  <tr>
    <th>Nombre</th>
    <th>Precio</th>
    <th>Categorias</th>
    <th></th>
  </tr>
  	<% @products.each do |product|%>
  	<tr>
		<td><%=product.name%></td>
		<td><%=product.price%></td>
		<td> <% product.categories.each do |category|%>
			<%= category.name %>
			<% end %>
		</td>
		<td><%= link_to "Editar", edit_product_path(product)%>
			<%= link_to "Eliminar", product , method: :delete%>
		</td>
	<tr>
	<%end%>

</table>